<%= @post.title%>
<%= sanitize  @post.body%>

<h2>Ð¡omments:</h2>
<div width="10px" align="left">
<hr>
<% @comments.each do |comment|%>
<p><%= image_tag @post.user.avatar.url(:thumb) ,width:30,height:30%> User <b><%= comment.user.nickname %></b> write: </p>
<p><%= comment.text %></p>
<p>Data: <%=comment.created_at%></p>
<hr>
<% end %>
</div>
<div align="center">
<%= form_for :postcomment, url: post_postcomments_path(post_id: @post.id) do |f| %>

<% if flash[:notice] %>
  <div class="notice"> <%= flash[:notice] %> </div>
<% end %>

<p><%= f.label "Write Comment" %></p>
<%= f.text_area :text, cols: 10, rows: 5 %><br />

<p><%= f.submit "Send"%></p>

<%end%>
</div>